<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
          http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <import resource="batch/batch-sct-storage.xml"/>

    <!-- Transforme des intervalles de caractÃ¨res sous forme de String (ex : 8-11, 11-13, 15-40) en tableau de Range -->
    <bean id="customEditorConfigurer" class="org.springframework.beans.factory.config.CustomEditorConfigurer">
        <property name="customEditors">
            <map>
                <entry key="org.springframework.batch.item.file.transform.Range[]">
                    <bean class="org.springframework.batch.item.file.transform.RangeArrayPropertyEditor"/>
                </entry>
            </map>
        </property>
    </bean>

</beans>